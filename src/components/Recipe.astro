---
export interface Props {
  description: string;
  minutes: string;
  source?: string
  title: string;
}

const { description, minutes, source, title } = Astro.props
---

<article>
  <header>
    <h1>{title}</h1>
    <p>{minutes} min</p>
    {source && <p><a href={source}>Inspirationsk√§lla</a></p>}
  </header>
  <main>
    <p>{description}</p>
    <slot />
  </main>
</article>

<style>
  article {
    margin-top: 6rem;
    margin-bottom: 8rem;
  }

  article :global(h2) {
    margin-top: 3rem;
    font-size: 1.5rem;
    font-weight: bold;
  }

  header {
    padding-bottom: 2rem;
    margin-bottom: 2rem;
    border-bottom: 4px solid var(--theme-divider);
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
  }
</style>
